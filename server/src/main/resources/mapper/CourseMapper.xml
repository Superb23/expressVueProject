<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.superb.mapper.CourseMapper">
    <select id="pageQuery" resultType="com.superb.pojo.entity.Course">
        select * from video
        <where>
            <if test="category != null">
                and category like concat('%', #{category}, '%')
            </if>
            and del = 0
        </where>
        order by id asc
    </select>

    <update id="update">
        update video
        <set>
            <if test="title != null">
                title = #{title},
            </if>
            <if test="courseImg != null">
                course_img = #{courseImg},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="point != null">
                point = #{point},
            </if>
            <if test="category != null">
                category = #{category},
            </if>
            <if test="del != null">
                del = #{del},
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>
